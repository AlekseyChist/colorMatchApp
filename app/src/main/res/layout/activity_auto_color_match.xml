<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7D8D2">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="50dp"
        android:paddingTop="100dp"
        android:paddingRight="50dp"
        android:paddingBottom="100dp">

        <TextView
            android:id="@+id/auto_color_activity_name_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arima_madurai_medium"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Auto color match"
            android:textColor="#202020"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/choice_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/auto_color_activity_name_heading"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center"
            android:text="Please start with the first color you want to match: "
            android:textColor="#202020"
            android:textSize="16dp" />

        <Spinner
            android:id="@+id/simplespinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choice_explanation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:focusable="true"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/simplespinner2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/simplespinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:focusable="true"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/simplespinner3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/simplespinner2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:focusable="true"
            android:textAlignment="center" />

    </RelativeLayout>

</ScrollView>
