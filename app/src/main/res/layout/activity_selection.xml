<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7D8D2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/app_name_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arima_madurai_medium"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Color Match"
            android:textColor="#202020"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/choice_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_name_heading"
            android:fontFamily="@font/arima_madurai_light"
            android:gravity="center"
            android:text="This App will help you in your everyday routine of combining colors for your clothes. You can choose to color match yourself or to use a suggested color scheme we have developed. "
            android:textColor="#202020"
            android:textSize="14dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_auto_color_match"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choice_explanation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/auto_color_match" />

                <TextView
                    android:id="@+id/auto_color_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D7D8D2"
                    android:textColor="#222222"
                    android:fontFamily="@font/arima_madurai_medium"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="Auto color match" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_self_color_match"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_auto_color_match"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:paddingBottom="30dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/self_color_match2" />

                <TextView
                    android:id="@+id/self_color_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D7D8D2"
                    android:textColor="#222222"
                    android:fontFamily="@font/arima_madurai_medium"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="Self color match" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_below="@+id/card_view_self_color_match"
            android:layout_marginTop="10sp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="0dp" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>